<Window x:Class="Client.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.Views"
        mc:Ignorable="d"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:converters="clr-namespace:Client.Converters"
        xmlns:enums="clr-namespace:Client.Enums"
        xmlns:translations="clr-namespace:ExpertIp.Translations;assembly=ExpertIp.TranslationsNet6"
        xmlns:viewModels="clr-namespace:Client.ViewModels"
        d:DataContext="{d:DesignInstance viewModels:MainWindowViewModel}"
        Loaded="CashboxWindow_Loaded"
        x:Name="CashboxWindow" Title="{translations:Txt lblHeader}" Height="450" Width="1000">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding OnLoadedCommand}" />
        </i:EventTrigger>

    </i:Interaction.Triggers>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ContentControl Grid.Row="0" Grid.RowSpan="2" prism:RegionManager.RegionName="SettingsRegion" Panel.ZIndex="100" />

        <ComboBox Text="{Binding SelectedLanguage}" x:Name="TranslationsComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Width="200"
                  ItemsSource="{Binding Source={converters:EnumConvert {x:Type enums:LanguageEnums}}}"
                 
                  SelectedItem="{Binding SelectedLanguage, Mode=TwoWay}"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
        <Button Content="{Binding ConnectionStatus}" Command="{Binding StartStopConnectionCommand}" Width="100" Height="30" HorizontalAlignment="Right" Margin="10"/>
            <Button Content="{translations:Txt lblSettings}" Command="{Binding OpenSettingsCommand}" Width="100" Height="30" HorizontalAlignment="Right" Margin="10"/>
        </StackPanel>
        <ListBox Grid.Row="1" x:Name="CommandListBox" ItemsSource="{Binding Commands}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10"   >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="5" Width="{Binding ElementName=CommandListBox, Path=ActualWidth}">
                        <TextBlock Text="{Binding StationDateTime}" FontWeight="Bold" FontSize="24" Margin="5"  Foreground="Blue" VerticalAlignment="Top"/>
                        
                            <ListBox x:Name="info" ItemsSource="{Binding TextData}"  FontWeight="Bold" FontSize="20"   Background="Transparent" BorderBrush="Transparent" ScrollViewer.CanContentScroll="False" ScrollViewer.HorizontalScrollBarVisibility="Hidden" IsHitTestVisible="False"   >
                                <ListBox.ItemTemplate>
                                    <DataTemplate>

                                    <TextBlock Text="{Binding }"  FontSize="20" Margin="5"  TextWrapping="Wrap" />
                                         
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>


                       
                       
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        

    </Grid>
</Window>
